        <activity android:name="com.nemo.tuktalk.presentation.home.viewAll.ViewAllByTaskActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nemo.tuktalk.presentation.home.viewAll.ViewAllMenteeReviewActivity"
