<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tuktalk">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".TuktalkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tuktalk"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".presentation.login.LoginActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.guide.GuideActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.signup.SelectRoleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.signup.SelectCategoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.signup.info.InfoRegistActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.signup.complete.SignUpCompleteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.mypage.Test2Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.mypage.mentor.mentorRegist.MentorRegistActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".presentation.mypage.mentor.mentorProfile.MentorProfileActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".presentation.home.viewAll.ViewAllByTaskActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.home.viewAll.ViewAllMenteeReviewActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".presentation.mypage.mentor.mentorInfo.MentorInfoActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>