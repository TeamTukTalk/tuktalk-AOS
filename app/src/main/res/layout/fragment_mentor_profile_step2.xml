                                android:layout_height="match_parent"
                                android:layout_weight="11"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_down_arrow"
                                />


                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
