<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_29"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_71"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.71"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <!--                                            -->

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="360:218"
        />

    <ImageView
        android:id="@+id/iv_celebrate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_29"
        app:layout_constraintRight_toRightOf="@id/gl_v_71"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/celebrate_logo"/>


    <TextView
        android:id="@+id/tv_welcome_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/iv_celebrate"
        app:layout_constraintDimensionRatio="328:25"
        android:text="@string/welcome_1"
        style="@style/tv_welcome_1"
        />

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_1"
        app:layout_constraintDimensionRatio="360:4"
        />

    <TextView
        android:id="@+id/tv_welcome_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintDimensionRatio="328:18"
        android:text="@string/welcome_2"
        style="@style/tv_welcome_2"
        />

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_2"
        app:layout_constraintDimensionRatio="360:32"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_goto_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintDimensionRatio="328:52"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="@color/tuktalk_primary"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/btnRaduisShape"
        android:text="프로필 등록하기"
        android:textColor="@color/tuktalk_primary"
        android:textAppearance="@style/TextAppearance.AppCompat.Button2"

        android:stateListAnimator="@null"

        android:visibility="invisible"/>
    <!-- ////////////// 우선 프로필 등록하기 제외 /////////////// -->

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_goto_profile"
        app:layout_constraintDimensionRatio="360:8"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_goto_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/view_4"
        app:layout_constraintDimensionRatio="328:52"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#E5E5E5"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/btnRaduisShape"
        android:text="홈으로 가기"
        android:textColor="#4F4F4F"
        android:textAppearance="@style/TextAppearance.AppCompat.Button2"

        android:stateListAnimator="@null"/>



</androidx.constraintlayout.widget.ConstraintLayout>