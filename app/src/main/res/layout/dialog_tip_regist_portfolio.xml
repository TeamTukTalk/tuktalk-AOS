<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dialog"
        android:layout_width="330dp"
        android:layout_height="480dp"
        android:background="@drawable/dialog_rounded">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_96"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_93.75"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9375"/>

        <!-- ///////////////////// -->

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="320:23"/>

        <ImageView
            android:id="@+id/iv_tip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintLeft_toRightOf="@id/gl_v_4"
            app:layout_constraintWidth_percent="0.125"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_img_tip"/>

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_tip"
            app:layout_constraintBottom_toBottomOf="@id/iv_tip"
            app:layout_constraintLeft_toRightOf="@id/iv_tip"
            app:layout_constraintWidth_percent="0.0375"/>


        <View
            android:id="@+id/view_1_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="320:20"/>

        <View
            android:id="@+id/view_1_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1_1"
            app:layout_constraintDimensionRatio="320:24"/>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1_1"
            app:layout_constraintBottom_toBottomOf="@id/view_1_2"
            app:layout_constraintLeft_toRightOf="@id/view_2"
            app:layout_constraintWidth_percent="0.428"

            android:maxLines="1"
            android:text="포트폴리오 소개 TIP"
            style="@style/tv_tip_dialog_1"/>

        <View
            android:id="@+id/view_1_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintDimensionRatio="320:4"/>

        <View
            android:id="@+id/view_1_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1_3"
            app:layout_constraintDimensionRatio="320:18"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1_3"
            app:layout_constraintBottom_toBottomOf="@id/view_1_4"
            app:layout_constraintLeft_toRightOf="@id/view_2"
            app:layout_constraintWidth_percent="0.703"

            android:maxLines="1"
            android:text="작성팁을 참고해서 내 서비스를 설명해보세요!"
            style="@style/tv_tip_dialog_2"/>


        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintRight_toLeftOf="@id/gl_v_93.75"

            app:layout_constraintWidth_percent="0.0415"
            app:layout_constraintDimensionRatio="1:1"

            android:src="@drawable/ic_icon_close"/>



        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_2"
            app:layout_constraintDimensionRatio="320:20"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_3"
            app:layout_constraintBottom_toTopOf="@id/view_bottom_1"
            app:layout_constraintLeft_toRightOf="@id/gl_v_4"
            app:layout_constraintRight_toLeftOf="@id/gl_v_96"

            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view_cl_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="288:12"/>

                <View
                    android:id="@+id/view_cl_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_1"
                    app:layout_constraintDimensionRatio="288:80"/>

                <TextView
                    android:id="@+id/tv_cl_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_1"
                    app:layout_constraintBottom_toBottomOf="@id/view_cl_2"

                    style="@style/tv_tip_dialog_cl_1"/>


                <View
                    android:id="@+id/view_cl_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cl_1"
                    app:layout_constraintDimensionRatio="288:20"/>

                <View
                    android:id="@+id/view_cl_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_3"
                    app:layout_constraintDimensionRatio="288:18"/>

                <TextView
                    android:id="@+id/tv_cl_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_3"
                    app:layout_constraintBottom_toBottomOf="@id/view_cl_4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintDimensionRatio="19:18"

                    android:text="EX)"
                    style="@style/tv_tip_dialog_cl_2"/>


                <View
                    android:id="@+id/view_cl_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cl_2"
                    app:layout_constraintDimensionRatio="288:4"/>

                <View
                    android:id="@+id/view_cl_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_5"
                    app:layout_constraintDimensionRatio="288:300"/>

                <TextView
                    android:id="@+id/tv_cl_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_cl_5"
                    app:layout_constraintBottom_toBottomOf="@id/view_cl_6"

                    android:text="@string/tv_tip_dialog_2"
                    style="@style/tv_tip_dialog_cl_3"/>


                <View
                    android:id="@+id/view_cl_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cl_3"
                    app:layout_constraintDimensionRatio="288:4"/>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <View
            android:id="@+id/view_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="320:20"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>