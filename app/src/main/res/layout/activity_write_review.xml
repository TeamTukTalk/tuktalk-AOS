<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_79.2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.792"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_18"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_82"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <!-- Tool bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        style="@style/ToolbarStyle.Dark"
        />
    <!-- ////////////////////////// -->


    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintDimensionRatio="360:24"/>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintDimensionRatio="360:24"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/view_2"

        android:text="@string/tv_write_review_1"
        style="@style/tv_write_review_1"/>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintDimensionRatio="360:24"/>

    <ImageView
        android:id="@+id/iv_star_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/gl_v_18"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintWidth_percent="0.091"
        app:layout_constraintDimensionRatio="1:1"

        android:src="@drawable/ic_star_unactive"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/view_star_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_star_1"
        app:layout_constraintLeft_toRightOf="@id/iv_star_1"
        app:layout_constraintWidth_percent="0.04625"/>

    <ImageView
        android:id="@+id/iv_star_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view_star_1"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintWidth_percent="0.091"
        app:layout_constraintDimensionRatio="1:1"

        android:src="@drawable/ic_star_unactive"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/view_star_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_star_1"
        app:layout_constraintLeft_toRightOf="@id/iv_star_2"
        app:layout_constraintWidth_percent="0.04625"/>

    <ImageView
        android:id="@+id/iv_star_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view_star_2"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintWidth_percent="0.091"
        app:layout_constraintDimensionRatio="1:1"

        android:src="@drawable/ic_star_unactive"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/view_star_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_star_1"
        app:layout_constraintLeft_toRightOf="@id/iv_star_3"
        app:layout_constraintWidth_percent="0.04625"/>

    <ImageView
        android:id="@+id/iv_star_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view_star_3"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintWidth_percent="0.091"
        app:layout_constraintDimensionRatio="1:1"

        android:src="@drawable/ic_star_unactive"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/view_star_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_star_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_star_1"
        app:layout_constraintLeft_toRightOf="@id/iv_star_4"
        app:layout_constraintWidth_percent="0.04625"/>

    <ImageView
        android:id="@+id/iv_star_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view_star_4"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintWidth_percent="0.091"
        app:layout_constraintDimensionRatio="1:1"

        android:src="@drawable/ic_star_unactive"
        android:scaleType="centerInside"/>


    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_star_1"
        app:layout_constraintDimensionRatio="360:80"/>

    <View
        android:id="@+id/view_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_4"
        app:layout_constraintDimensionRatio="360:24"/>


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toBottomOf="@id/view_4"
        app:layout_constraintBottom_toBottomOf="@id/view_5"

        android:text="@string/tv_write_review_2"
        style="@style/tv_write_review_1"/>

    <View
        android:id="@+id/view_6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_constraintDimensionRatio="360:16"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_write_review"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_6"
        app:layout_constraintLeft_toRightOf="@id/gl_v_4.44"
        app:layout_constraintRight_toLeftOf="@id/gl_v_95.56"
        app:layout_constraintDimensionRatio="328:140"

        app:strokeWidth="1dp"
        app:strokeColor="@color/tuktalk_gray_1"
        app:shapeAppearanceOverlay="@style/CardViewRadius8"

        app:cardUseCompatPadding="true"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="328">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="296"
                android:orientation="vertical"
                android:weightSum="140">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>
                <EditText
                    android:id="@+id/et_write_review"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="116"
                    android:hint="소중한 후기를 작성해주세요."

                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:gravity="start"
                    android:background="@null"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    style="@style/et_mentor_profile_step_2"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



    <View
        android:id="@+id/view_for_btn_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="360:16"/>

    <View
        android:id="@+id/view_for_btn_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_for_btn_1"
        app:layout_constraintDimensionRatio="360:52"/>

    <View
        android:id="@+id/view_for_btn_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_for_btn_2"
        app:layout_constraintDimensionRatio="360:16"/>

    <View
        android:id="@+id/view_for_btn_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/view_for_btn_3"
        android:background="@color/tuktalk_gray_4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_write_review_unactive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_for_btn_2"
        app:layout_constraintBottom_toTopOf="@id/view_for_btn_1"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"

        android:text="작성완료"
        android:textColor="@color/tuktalk_sub_content_4"
        android:backgroundTint="@color/tuktalk_gray_4"
        app:shapeAppearanceOverlay="@style/buttonRadiusShape2"

        android:enabled="false"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_write_review_active"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_for_btn_2"
        app:layout_constraintBottom_toTopOf="@id/view_for_btn_1"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"

        android:text="작성완료"
        android:textColor="@color/white"
        android:backgroundTint="@color/tuktalk_primary"
        app:shapeAppearanceOverlay="@style/buttonRadiusShape2"

        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>