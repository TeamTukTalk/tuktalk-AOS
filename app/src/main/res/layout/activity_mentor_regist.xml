<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- guideline vertical start -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <!-- guideline vertical end -->

    <!-- Tool bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        style="@style/ToolbarStyle.Dark"
      />
    <!-- -->

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintHeight_percent="0.026"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.094"/>

    <ImageView
        android:id="@+id/iv_step1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintWidth_percent="0.057"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_num_1"
        android:scaleType="centerInside"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/iv_step1"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintWidth_percent="0.011"/>

    <TextView
        android:id="@+id/tv_step1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintLeft_toRightOf="@id/view3"
        app:layout_constraintWidth_percent="0.147"
        android:text="@string/step_1"
        style="@style/tv_step_on"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tv_step1"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintWidth_percent="0.088"/>

    <ImageView
        android:id="@+id/iv_step2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintWidth_percent="0.057"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_step2_off"
        android:scaleType="centerInside"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/iv_step2"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step2"
        app:layout_constraintWidth_percent="0.011"/>

    <TextView
        android:id="@+id/tv_step2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintLeft_toRightOf="@id/view5"
        app:layout_constraintWidth_percent="0.147"
        android:text="@string/step_2"
        style="@style/tv_step_off"
        />

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tv_step2"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintWidth_percent="0.088"/>

    <ImageView
        android:id="@+id/iv_step3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/view6"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintWidth_percent="0.057"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_step3_off"
        android:scaleType="centerInside"
        />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/iv_step3"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step3"
        app:layout_constraintWidth_percent="0.011"/>

    <TextView
        android:id="@+id/tv_step3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_step1"
        app:layout_constraintLeft_toRightOf="@id/view7"
        app:layout_constraintWidth_percent="0.147"
        android:text="@string/step_3"
        style="@style/tv_step_off"
        />

    <!-- -->

    <View
        android:id="@+id/view_8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_step1"
        app:layout_constraintHeight_percent="0.029"/>

    <FrameLayout
        android:id="@+id/framelayout_mentor_regist_step"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_8"
        app:layout_constraintBottom_toBottomOf="parent"/>











</androidx.constraintlayout.widget.ConstraintLayout>

</layout>