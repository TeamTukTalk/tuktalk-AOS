<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_75"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_pf_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:shapeAppearanceOverlay="@style/pf_list_cardview"
        app:strokeWidth="0.3dp"
        app:strokeColor="#EEEEEE"

        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_cl_h_14.8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.148"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_cl_h_47.4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.474"/>

            <!-- -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_cl_v_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_cl_v_92"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_cl_v_93.8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.938"/>

            <!-- -->

            <View
                android:id="@+id/view_for_heart_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="330:22"/>

            <View
                android:id="@+id/view_for_heart_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.06"/>

            <ImageView
                android:id="@+id/iv_heart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_for_heart_1"
                app:layout_constraintRight_toLeftOf="@id/view_for_heart_2"
                app:layout_constraintWidth_percent="0.063"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/ic_mentor_like_active"
                android:scaleType="centerInside"/>

            <View
                android:id="@+id/view_1_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="330:20"/>

            <View
                android:id="@+id/view_1_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1_1"
                app:layout_constraintDimensionRatio="330:43"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1_1"
                app:layout_constraintBottom_toBottomOf="@id/view_1_2"
                app:layout_constraintLeft_toLeftOf="@id/gl_cl_v_6"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/profile_image_circle_background_blue">

                <TextView
                    android:id="@+id/tv_profile_first_letter"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.29"
                    app:layout_constraintHeight_percent="0.5"
                    android:text="ì• "
                    style="@style/tv_profile_first_letter"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/cl_profile"
                app:layout_constraintBottom_toBottomOf="@id/cl_profile"
                app:layout_constraintLeft_toRightOf="@id/cl_profile"
                app:layout_constraintWidth_percent="0.0487"/>

            <View
                android:id="@+id/view_1_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/view_1"
                app:layout_constraintDimensionRatio="330:20"/>

            <TextView
                android:id="@+id/tv_mentor_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/view_1"
                app:layout_constraintBottom_toBottomOf="@id/view_1_3"
                app:layout_constraintLeft_toRightOf="@id/view_1"
                style="@style/tv_home_top5_mentor_name"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/tv_mentor_name"
                app:layout_constraintTop_toTopOf="@id/tv_mentor_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_mentor_name"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_mentor_certification"
                />

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mentor_name"
                app:layout_constraintDimensionRatio="330:2"/>

            <View
                android:id="@+id/view_3_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_3"
                app:layout_constraintDimensionRatio="330:18"/>

            <TextView
                android:id="@+id/tv_conmpany_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_3"
                app:layout_constraintBottom_toBottomOf="@id/view_3_1"
                app:layout_constraintLeft_toLeftOf="@id/tv_mentor_name"
                style="@style/tv_home_top5_mentor_company_task"/>

            <View
                android:id="@+id/view_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_conmpany_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_conmpany_name"
                app:layout_constraintLeft_toRightOf="@id/tv_conmpany_name"
                app:layout_constraintWidth_percent="0.014"/>

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/view_4"
                app:layout_constraintBottom_toBottomOf="@id/view_4"
                app:layout_constraintLeft_toRightOf="@id/view_4"
                app:layout_constraintWidth_percent="0.0075"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="centerInside"
                android:src="@drawable/indicator_circle_gray"/>

            <View
                android:id="@+id/view_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_conmpany_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_conmpany_name"
                app:layout_constraintLeft_toRightOf="@id/iv_point"
                app:layout_constraintWidth_percent="0.03"/>

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/view_5"
                app:layout_constraintBottom_toBottomOf="@id/view_5"
                app:layout_constraintLeft_toRightOf="@id/view_5"
                style="@style/tv_home_top5_mentor_company_task"/>

            <View
                android:id="@+id/view_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_conmpany_name"
                app:layout_constraintDimensionRatio="330:8"/>

            <View
                android:id="@+id/view_line"
                android:layout_width="0dp"
                android:layout_height="0.7dp"
                app:layout_constraintTop_toBottomOf="@id/view_6"
                app:layout_constraintLeft_toLeftOf="@id/tv_conmpany_name"
                app:layout_constraintRight_toRightOf="@id/gl_cl_v_92"
                android:background="@color/tuktalk_gray_4"/>

            <View
                android:id="@+id/view_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_line"
                app:layout_constraintDimensionRatio="330:8"/>

            <TextView
                android:id="@+id/tv_hash_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_7"
                app:layout_constraintLeft_toLeftOf="@id/view_line"
                app:layout_constraintRight_toRightOf="@id/gl_cl_v_93.8"

                style="@style/tv_home_top5_mentor_hash_tag"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <View
                android:id="@+id/view_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hash_tag"
                app:layout_constraintDimensionRatio="330:20"/>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>