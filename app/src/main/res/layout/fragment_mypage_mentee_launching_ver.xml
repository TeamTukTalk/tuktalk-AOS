<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Tool bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:contentInsetStartWithNavigation="0dp"
            android:background="@color/white"

            />
        <!-- -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"

            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- vertical guideline -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_4.44"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.0444"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_29.4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.294"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_33.32"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3332"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_35.54"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3554"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_64.42"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6442"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_66.64"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6664"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_92.7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.927"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_95.56"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9556"/>


                <!-- vertical guideline end -->

                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="360:1"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_profile"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_1"
                    app:layout_constraintLeft_toRightOf="@id/gl_v_4.44"
                    app:layout_constraintWidth_percent="0.194"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/profile_image_circle_background_blue">

                    <TextView
                        android:id="@+id/tv_profile_first_letter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintWidth_percent="0.29"
                        app:layout_constraintHeight_percent="0.5"
                        android:text="애"
                        style="@style/tv_profile_first_letter"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_profile_edit"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="@id/cl_profile"
                    app:layout_constraintBottom_toBottomOf="@id/cl_profile"
                    app:layout_constraintWidth_percent="0.0638"
                    app:layout_constraintDimensionRatio="1:1"
                    android:src="@drawable/ic_profile_reg_mypage"/>


                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_1"
                    app:layout_constraintDimensionRatio="360:11"/>

                <View
                    android:id="@+id/view_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_1"
                    app:layout_constraintDimensionRatio="360:35"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toRightOf="@id/gl_v_29.4"
                    app:layout_constraintTop_toBottomOf="@id/view_2"
                    app:layout_constraintBottom_toBottomOf="@id/view_3"
                    app:layout_constraintDimensionRatio="200:24"
                    android:maxLines="1"
                    android:text="00님"

                    style="@style/tv_mypage_name_mentee"/>

                <View
                    android:id="@+id/view_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_1"
                    app:layout_constraintDimensionRatio="360:59"/>

                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_3"
                    app:layout_constraintBottom_toBottomOf="@id/view_4"
                    app:layout_constraintLeft_toRightOf="@id/gl_v_29.4"
                    app:layout_constraintDimensionRatio="200:24"
                    android:text="안녕하세요."
                    style="@style/tv_mypage_hello"
                    />

                <View
                    android:id="@+id/view_5_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="360:90"/>



                <View
                    android:id="@+id/view_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_5_1"
                    app:layout_constraintDimensionRatio="360:20"/>


                <View
                    android:id="@+id/view_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_7"
                    app:layout_constraintDimensionRatio="360:8"
                    android:background="@color/tuktalk_gray_5"/>


                <!-- 나의 서비스 -->
                <View
                    android:id="@+id/view_10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_9"
                    app:layout_constraintDimensionRatio="360:16" />

                <TextView
                    android:id="@+id/tv_myservice_des"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_10"
                    app:layout_constraintLeft_toRightOf="@id/gl_v_4.44"
                    app:layout_constraintWidth_percent="0.84"
                    app:layout_constraintDimensionRatio="304:22"
                    android:text="@string/tv_mentee_recent_portfolio_des"
                    style="@style/tv_mentor_mp_big_title"/>

                <LinearLayout
                    android:id="@+id/ll_goto_recent_portfolio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_myservice_des"
                    app:layout_constraintBottom_toBottomOf="@id/tv_myservice_des"
                    app:layout_constraintLeft_toRightOf="@id/tv_myservice_des"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"/>

                <View
                    android:id="@+id/view_11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_9"
                    app:layout_constraintDimensionRatio="360:23" />

                <ImageView
                    android:id="@+id/iv_goto_recent_portfolio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_11"
                    app:layout_constraintLeft_toRightOf="@id/gl_v_92.7"
                    app:layout_constraintWidth_percent="0.012"
                    app:layout_constraintDimensionRatio="1:2"
                    android:src="@drawable/ic_next"
                    android:scaleType="centerInside"/>

                <View
                    android:id="@+id/view_12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_myservice_des"
                    app:layout_constraintDimensionRatio="360:16" />

                <View
                    android:id="@+id/view_14"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_12"
                    app:layout_constraintDimensionRatio="360:8"
                    android:background="@color/tuktalk_gray_5"/>




                <!-- 멘토 회사 인증 & 계정 설정 -->
                <LinearLayout
                    android:id="@+id/ll_review_manage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_14"
                    app:layout_constraintDimensionRatio="360:46"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="328"
                        android:orientation="vertical"
                        android:weightSum="46">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="22"
                            android:text="리뷰관리"
                            style="@style/tv_mentor_mp_small_title"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mentee_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_review_manage"
                    app:layout_constraintDimensionRatio="360:46"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="328"
                        android:orientation="vertical"
                        android:weightSum="46">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="22"
                            android:text="찜목록"
                            style="@style/tv_mentor_mp_small_title"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                </LinearLayout>

                <View
                    android:id="@+id/view_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_mentee_wishlist"
                    app:layout_constraintDimensionRatio="360:8"
                    android:background="@color/tuktalk_gray_5"/>

                <LinearLayout
                    android:id="@+id/ll_goto_account_option"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_line_2"
                    app:layout_constraintDimensionRatio="360:46"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="328"
                        android:orientation="vertical"
                        android:weightSum="46">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="22"
                            android:text="계정 설정"
                            style="@style/tv_mentor_mp_small_title"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"/>
                </LinearLayout>


              <!--  <View
                    android:id="@+id/view_16"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_goto_account_option"
                    app:layout_constraintDimensionRatio="360:60"/>-->



            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>