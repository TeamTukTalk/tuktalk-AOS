<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- guideline vertical start -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_35"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_65"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <!-- guideline vertical end -->





    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:shapeAppearanceOverlay="@style/mentorRegistStepShape"
        app:strokeWidth="0.7dp"
        app:strokeColor="#EEEEEE"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- guideline vertical start -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_5.2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.052"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_6.1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.061"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_10.6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.106"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_11.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.115"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_33.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.335"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_66.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.665"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_88.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.885"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_89.4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.894"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_93.9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.939"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_94.8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.948"/>


            <!-- guideline vertical end -->

            <ProgressBar
                android:id="@+id/loading_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:indeterminateTint="@color/tuktalk_loading_spinner"
                android:visibility="invisible"
                />


            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="343:32"/>

            <View
                android:id="@+id/view_1_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintDimensionRatio="343:24"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toBottomOf="@id/view_1_1"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_11.5"
                app:layout_constraintRight_toRightOf="@id/gl_v_88.5"
                android:text="@string/tv_step2_1"
                style="@style/tv_step_des_1"
                android:maxLines="1"
                />

            <!-- cardview 영역 피그마 수치 기준으로 하기 -->

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                app:layout_constraintDimensionRatio="343:4"
                />

            <View
                android:id="@+id/view_2_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_2"
                app:layout_constraintDimensionRatio="343:18"
                />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_2"
                app:layout_constraintBottom_toBottomOf="@id/view_2_1"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_10.6"
                app:layout_constraintRight_toRightOf="@id/gl_v_89.4"
                android:maxLines="1"
                android:text="@string/tv_step2_2"
                style="@style/tv_step_des_2_1"/>

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_2"
                app:layout_constraintDimensionRatio="343:40"
                />

            <View
                android:id="@+id/view_3_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_3"
                app:layout_constraintDimensionRatio="343:20"
                />

            <TextView
                android:id="@+id/tv_office_des"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_3"
                app:layout_constraintBottom_toBottomOf="@id/view_3_1"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                android:text="이메일"
                style="@style/tv_step_input_des"
                />

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_office_des"
                app:layout_constraintDimensionRatio="343:6"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_4"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_5.2"
                app:layout_constraintRight_toRightOf="@id/gl_v_94.8"

                android:textColor="@color/tuktalk_sub_content"
                android:maxLines="1"
                android:hint="@string/tv_step_hint3"
                android:textColorHint="@color/tuktalk_sub_content_4"
                android:backgroundTint="@color/tuktalk_gray1"

                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                />

            <View
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintDimensionRatio="343:32"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_inactive"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintDimensionRatio="288:50"
                android:text="발송"
                android:textColor="@color/tuktalk_sub_content_4"
                app:shapeAppearanceOverlay="@style/btnRaduisShape2"
                android:backgroundTint="@color/tuktalk_gray_4"

                android:enabled="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_active"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintDimensionRatio="288:50"
                android:text="발송"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/btnRaduisShape2"
                android:backgroundTint="@color/tuktalk_primary"

                android:visibility="invisible"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_resend"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintDimensionRatio="288:50"
                android:text="재발송"
                android:textColor="@color/tuktalk_sub_content_2"
                app:shapeAppearanceOverlay="@style/btnRaduisShape2"
                android:backgroundTint="@color/white"
                app:strokeWidth="0.8dp"
                app:strokeColor="@color/tuktalk_gray_1"

                android:stateListAnimator="@null"

                android:visibility="invisible"/>


            <View
                android:id="@+id/view_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/btn_next_inactive"
                app:layout_constraintDimensionRatio="343:8"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_certification_complete_check"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_6"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintDimensionRatio="288:50"
                android:text="인증완료"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/btnRaduisShape2"
                android:backgroundTint="@color/tuktalk_primary"

                android:visibility="gone"/>

            <View
                android:id="@+id/view_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/btn_certification_complete_check"
                app:layout_constraintDimensionRatio="343:14"/>

            <View
                android:id="@+id/view_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_7"
                app:layout_constraintDimensionRatio="343:35"/>

            <TextView
                android:id="@+id/tv_text_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_7"
                app:layout_constraintBottom_toBottomOf="@id/view_8"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                android:text="@string/tv_step_inquire"
                style="@style/tv_step_des_inquire"/>


            <View
                android:id="@+id/view_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_text_1"
                app:layout_constraintDimensionRatio="343:32"/>







        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>