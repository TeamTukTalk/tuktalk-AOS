<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- guideline vertical start -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_4.44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_35"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_65"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_95.56"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556"/>

    <!-- guideline vertical end -->



    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
        app:layout_constraintRight_toRightOf="@id/gl_v_95.56"
        app:layout_constraintHeight_percent="0.5856"
        app:shapeAppearanceOverlay="@style/mentorRegistStepShape"
        app:strokeWidth="0.7dp"
        app:strokeColor="#EEEEEE"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- guideline vertical start -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_5.2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.052"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_6.1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.061"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_10.6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.106"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_29"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.29"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_33.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.335"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_66.5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.665"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_77"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.77"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_89.4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.894"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_93.9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.939"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_94.8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.948"/>


            <!-- guideline vertical end -->


            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.130"/>

            <ImageView
                android:id="@+id/iv_celebrate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_29"
                app:layout_constraintRight_toRightOf="@id/gl_v_77"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="centerInside"
                android:src="@drawable/celebrate_logo"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/iv_celebrate"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintHeight_percent="0.0638"
                android:text="@string/tv_step3_1"
                style="@style/tv_step_des_1"/>

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                app:layout_constraintHeight_percent="0.0106"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintTop_toBottomOf="@id/view_2"
                app:layout_constraintHeight_percent="0.0478"
                android:text="@string/tv_step3_2"
                style="@style/tv_step_des_2"/>

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_2"
                app:layout_constraintHeight_percent="0.085"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_goto_write"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_6.1"
                app:layout_constraintRight_toRightOf="@id/gl_v_93.9"
                app:layout_constraintTop_toBottomOf="@id/view_3"
                app:layout_constraintHeight_percent="0.14"
                app:shapeAppearanceOverlay="@style/btnRaduisShape2"

                android:text="작성하러 가기"
                android:textColor="@color/tuktalk_primary"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/tuktalk_primary"
                app:strokeWidth="1dp"/>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>