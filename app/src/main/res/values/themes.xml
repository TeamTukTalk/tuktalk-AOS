<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tuktalk" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#C5C5C5</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="buttonRadiusShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Button"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/notosans_kr_regular</item>
        <item name="android:fontFamily">@font/notosans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="categoryButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
        <!--
        <item name="android:textColor">#4F4F4F</item>
        <item name="strokeColor">#EEEEEE</item>
        -->
    </style>

    <style name="categoryCardViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="idCheckShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btnSignupCompleteShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btnRaduisShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btnRaduisShape2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button2</item>
    </style>

    <style name="TextAppearance.AppCompat.Button2"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/notosans_kr_medium</item>
        <item name="android:fontFamily">@font/notosans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textStyle">bold</item>

    </style>


    <style name="mentorRegistStepShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>



</resources>